<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Back-Office - Connexion</title>
        
		<!-- Favicons and the like (avoid using transparent .png) -->
        <link rel="shortcut icon" href="/back/images/favicon.ico" />
        <link rel="apple-touch-icon-precomposed" href="/back/images/icon.png" />

        <link href="http://fonts.googleapis.com/css?family=Lato:100,300,400,700" media="all" rel="stylesheet" type="text/css" />
        <link href="/back/css/bootstrap.min.css" media="all" rel="stylesheet" type="text/css" />
        <link href="/back/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css" />
        <link href="/back/css/se7en-font.css" media="all" rel="stylesheet" type="text/css" />
        <link href="/back/css/style.css" media="all" rel="stylesheet" type="text/css" />
        
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">        
    </head>

    <body class="login2">

        <!-- Login Screen -->
        <div class="login-wrapper">
            <a href="/"><img width="105" height="64" src="/back/images/logo.png" /></a>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="E-mail" required autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Se connecter">
            </form>
            
            <!--<p>Pas encore de compte?</p>
            <a class="btn btn-default-outline btn-block" href="signup2.html">Inscrivez-vous</a>-->
        </div>
        <!-- End Login Screen -->

        <script src="http://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
        <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js" type="text/javascript"></script>
        <script src="/back/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/back/js/modernizr.custom.js" type="text/javascript"></script>
        <script src="/back/js/main.js" type="text/javascript"></script>
    </body>
</html>
