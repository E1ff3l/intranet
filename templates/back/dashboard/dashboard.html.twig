{% extends 'back/base.html.twig' %}

{% block title %}Back-Office - Dashboard{% endblock %}

{% block stylesheets %}

    <style>

        /* ---- Projet en cours -------------------------------------------------- */
        #div_etat_projet a:hover > div { border:1px solid #000000; }
        .conteneur_etat {
            margin-bottom:10px;
            min-height:50px; 
            color: #000000; 
            border-radius:5px; 
            border:1px solid #E8E8E8;
        }
        .etat_picto {
            float: left;
			width:55px; 
            font-size:33px; 
            padding-left:8px; 
        }
        .etat_detail {
            float: left;
            padding-top:3px; 
            padding-left:10px;
			border-left:1px solid #E8E8E8;
        }
        .etat_detail span.titre {
            color:#A80000; 
            font-weight:700;
        }
        .etat_detail span.titre_vide {
            color:#c6c6c6; 
            font-weight:700;
        }
        .etat_detail span.detail {
            font-size: 12px;
        }
        .etat_detail span.detail_vide {
            color:#c6c6c6; 
        }
        /* ----------------------------------------------------------------------- */

        /* ---- Chiffre d'affaire par exercices ---------------------------------- */
        .ca {
            padding-top:7px;
            margin-bottom:10px;
            height:40px; 
            border-radius:5px;
            border:1px solid #E8E8E8;
        }
        .ca-warning { border:2px solid #F0AD4E; }
        .ca-danger { border:2px solid #D9534F; }
        .ca:hover { border:1px solid #000000; }
        /* ----------------------------------------------------------------------- */

        /* ---- Déclarations mensuelles ------------------------------------------ */
        .gris { background-color: #E8E8E8; }
        /* ----------------------------------------------------------------------- */

    </style>

{% endblock %}

{% block body %}

    <div class="modal-shiftfix">
    
        {% include 'back/partials/navigation.html.twig' %}

        <div class="container-fluid main-content"></div>
            <div class="row">
				
                <!-- Projets en cours -->
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="widget-container">
                                <div class="heading">
                                    <i class="fa fa-tasks"></i>Projets en cours
                                </div>
                                <div id="div_etat_projet" class="widget-content padded">

                                    {{ liste_projet | raw }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- CA par exercices -->
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="widget-container">
                                <div class="heading">
                                    <i class="fa fa-money"></i>Chiffre d'affaire par exercices
                                </div>
                                <div class="widget-content padded">

                                    {{ contenu_ca |raw }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                  
                <!-- Déclarations mensuelles -->
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="widget-container">
                                <div class="heading">
                                    <i class="fa fa-pencil-square-o"></i>Déclarations mensuelles
                                </div>
                                <div class="widget-content padded">
                                    
                                    {{ declaration_mensuelle | raw }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                 
            </div>
        </div>    
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}
